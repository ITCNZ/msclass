<!--pages/search/search.wxml-->
<wxs src="../../wxs/filter.wxs" module="Filter" />
<view class="container">
  <searchBar-component bindsearchfn="searchFn" input-value="{{inputValue}}"></searchBar-component>
  <view class="keywords" wx:if="{{searchList.length<=0}}">
    <view class="text-center no-courses" wx:if="{{nocourse && searchList.length<=0}}">没有搜索到相关课程</view>
    <view class="keyword-list" bindtap="keywordFn" wx:for="{{keywords}}" wx:key="unique" data-keyword="{{item}}">{{item}}</view>
  </view>
  <view class="text-right mt20 search-tips" wx:if="{{searchList.length<=0}}">
    <button type="default" open-type="contact" class="contact-btn-area">课程问题反馈</button>
  </view>
  <scroll-view scroll-y enable-back-to-top lower-threshold="1" class="course-list mt30" bindscrolltolower="scrollBottom">
      <view class="course-main {{isIos ? 'ios-bottom230' : ''}}">    
        <navigator class="weui-flex__item course-one mb40" bindtap="goDetail" url="/pages/course/courseDetail/courseDetail?id={{item.courseId}}" wx:for="{{searchList}}" wx:key="unique">
          <view class="weui-inner">
            <image style="width: 100%; height: 100%; background-color: #eeeeee;" src="{{item.courseCover}}" lazy-load="true"></image>
            <view class="course-info">
              <text class="time">{{Filter.f_min(item.courseDuration)}}</text>
            </view>
            <view class="mask">
              <text class="arr" wx:if="{{item.isbuy == 1}}">已开通</text>
              <text class="arr yes" wx:else>未开通</text>
            </view>
          </view>
          <view class="title-info">{{item.courseName}}</view>
          <view class="title-teacher">主讲师：{{item.courseLecture}}</view>
        </navigator>
      </view>  
    </scroll-view>
    <loading-component loading-more="{{loadingMore}}"></loading-component>
</view>
