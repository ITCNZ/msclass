/* pages/search/search.wxss */
.no-courses{
  padding: 60rpx 0 40rpx 0;
  color: #666;
  font-size: 24rpx;
}
.keyword-list{
  background: #F2F2F2;
  border-radius: 26rpx;
  padding: 0 24rpx;
  height: 52rpx;
  line-height: 56rpx;
  display: inline-block;
  margin-top: 34rpx;
  margin-right: 32rpx;
  font-size: 30rpx;
  color: #666;
}

.search-tips button, .search-tips button:hover{
  color: #2778FA;
  font-size: 30rpx;
  border-bottom: 1px solid #2778FA;
  border-radius:0;background:none;display: inline-block;
  height: 44rpx;
  line-height: 44rpx;
  padding: 0
}

/* 课程列表 */
page{
  height: 100%;
  overflow: hidden
}
.course-list{
  display: flex;  
  box-sizing: border-box;  
  height: 100%;    
  flex:1; 
  overflow: hidden;
}  
 .ios-bottom230{
  padding-bottom: 330rpx;
} 
 .course-main{
   margin: 0 -10rpx;
   min-width: 690rpx;
   overflow: hidden;
   overflow-y: auto
} 

.course-one{
  text-align: center;
  width: 50%;
  float: left;
  font-size: 24rpx;
}

.weui-inner{
 margin: 0 10rpx; 
 height: 190rpx;
 border-radius: 16rpx;
 overflow: hidden;
 position: relative;
}
.course-one .title{
  position: absolute;
  text-align: center;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  line-height: 190rpx;
  font-size: 32rpx;
}
.course-one .course-info{
  position: absolute;
  right: 10rpx;
  top: 0;
  height: 32rpx;
  line-height: 32rpx;
  color: #fff;
  overflow: hidden;
  background: rgba(0,0,0,.6);
  border-radius: 0 14rpx 0 14rpx;
  padding:0 12rpx 0 4rpx;
  font-size: 20rpx;
}
.course-one .time, .course-one .name{
  float: left;
  padding-left: 14rpx;
}

.course-one .title-info{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding:14rpx 10rpx 0 10rpx;
  font-weight: bold;
  text-align: left;
  font-size: 24rpx;
  line-height: 34rpx;
}
.course-one .title-teacher{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
  font-size: 20rpx;
  color: #999;
  padding: 0 10rpx;
}
.weui-inner .mask{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  border-radius: 12rpx;
}
.weui-inner .arr{
  position: absolute;
  left: -60rpx;
  top: -60rpx;
  width: 120rpx;
  height: 120rpx;
  font-size: 20rpx;
  color: #fff;
  background: #50C866;
  text-align: center;
  -ms-transform:rotate(-45deg); /* IE 9 */
  -moz-transform:rotate(-45deg); /* Firefox */
  -webkit-transform:rotate(7deg); /* Safari and Chrome */
  -o-transform:rotate(-45deg); /* Opera */
  transform: rotate(-45deg);
  line-height: 200rpx;
}
.weui-inner .yes{
  background: #D0D0D0
}
