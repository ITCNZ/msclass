/* pages/course/allCourse/allCourse.wxss */
page{
  height: 100%;
}
.course-nav{
  border-bottom: 10rpx solid #fff; 
  overflow: hidden;
}
.course-list{
   display: flex; 
    box-sizing: border-box;
    height: 100%;
    flex:1;
    overflow: hidden;
}
 .course-main{
   margin: 0 -10rpx;
   min-width: 690rpx;
   overflow: hidden;
   /* padding-bottom: 370rpx; */
} 
.course-nav scroll-view{
  display: flex;
  white-space: nowrap;
  overflow-x:auto;
  margin-bottom: 12rpx;
}
.course-nav .scroll-item{
  height:40rpx;
  line-height: 40rpx;
  margin: 4rpx 20rpx 4rpx 0;
  color: #333;
  display: inline-block;
  padding: 0 20rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  background: #F2F2F2;
}
.course-nav .scroll-item-one{
  font-weight: bold;
  color: #000;
  padding-left: 0;
  background: none;
}

.course-nav .on{
  background: #2E7AFF;
  color: #fff
}

.course-one{
  position: relative;
  text-align: center;
  width: 50%;
  float: left;
  font-size: 24rpx;
}

.weui-inner{
 margin: 0 10rpx; 
 height: 190rpx;
 border-radius: 16rpx;
 overflow: hidden
}
.course-one .title{
  position: absolute;
  text-align: center;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  line-height: 190rpx;
  font-size: 32rpx;
}
.course-one .course-info{
  position: absolute;
  right: 10rpx;
  top: 0;
  height: 32rpx;
  line-height: 32rpx;
  color: #fff;
  overflow: hidden;
  background: rgba(0,0,0,.6);
  border-radius: 0 14rpx 0 14rpx;
  padding:0 12rpx 0 4rpx;
  font-size: 20rpx;
}
.course-one .time, .course-one .name{
  float: left;
  padding-left: 14rpx;
}

.course-one .title-info{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding:14rpx 10rpx 0 10rpx;
  font-weight: bold;
  text-align: left;
  font-size: 24rpx;
  line-height: 34rpx;
}
.course-one .title-teacher{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
  font-size: 20rpx;
  color: #999;
  padding: 0 10rpx;
}
