/* pages/usercenter/mustCourse/courseDetail/courseDetail.wxss */
.must-course-info{
  height: 106rpx;
  color: #fff;
  background: #0296ED;
  font-size: 32rpx;
  line-height: 106rpx;
  margin: 0 -30rpx 57rpx -30rpx;
  padding-left: 45rpx;
}
.must-course-info span{
  padding-right: 78rpx;
}
.weui-inner{
  margin: 0 10rpx; 
  height: 190rpx;
  border-radius: 16rpx;
  overflow: hidden
}

.weui-inner .course-info{
  position: absolute;
  right: 10rpx;
  top: 0;
  height: 32rpx;
  line-height: 32rpx;
  color: #fff;
  overflow: hidden;
  background: rgba(0,0,0,.6);
  border-radius: 0 14rpx 0 14rpx;
  padding:0 12rpx 0 4rpx;
  font-size: 20rpx;
}

.must-list-one{
  padding: 0;
  display: flex;
}
.must-course-img{
  width: 50%;
  margin: 0;
  position: relative
}
.must-title-info{
  width: 50%;
  padding-left: 32rpx;
  height: 190rpx;
}
.must-course-img .course-info{
  right: 0;
}
.must-title-info text{
  display: block;
  width: 100%;
  font-size: 26rpx;
  line-height: 38rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #999;
  margin-bottom: 21rpx;
}
.must-title-info .tit1{
  font-size: 32rpx;
  line-height: 48rpx;
  margin:10rpx 0 17rpx 0;
  font-weight:bold;
  color: #333;
}
.weui-inner .mask{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  border-radius: 12rpx;
}
.weui-inner .arr{
  position: absolute;
  left: -60rpx;
  top: -60rpx;
  width: 120rpx;
  height: 120rpx;
  font-size: 20rpx;
  color: #fff;
  background: #50C866;
  text-align: center;
  -ms-transform:rotate(-45deg); /* IE 9 */
  -moz-transform:rotate(-45deg); /* Firefox */
  -webkit-transform:rotate(7deg); /* Safari and Chrome */
  -o-transform:rotate(-45deg); /* Opera */
  transform: rotate(-45deg);
  line-height: 200rpx;
}
.weui-inner .yes{
  background: #D0D0D0
}