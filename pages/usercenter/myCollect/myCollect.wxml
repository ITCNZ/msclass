<!--pages/usercenter/myCollect/myCollect.wxml-->
<wxs src="../../../wxs/filter.wxs" module="Filter" />
<view class="container">
  <scroll-view scroll-y enable-back-to-top lower-threshold="1" class="course-list mt30" bindscrolltolower="scrollBottom">
      <view class="course-main">    
        <navigator url="/pages/course/courseDetail/courseDetail?id={{item.id}}" class="weui-flex__item course-one mb40" wx:for="{{myCollect}}" wx:key="unique">
          <view class="weui-inner">
            <image style="width: 100%; height: 100%; background-color: #eeeeee;" src="{{item.cover}}" lazy-load="true"></image>
            <view class="course-info">
              <text class="time">{{Filter.f_min(item.duration)}}</text>
            </view>
          </view>
          <view class="title-info">{{item.courseName}}</view>
          <view class="title-teacher">主讲师：{{item.lecture}}</view>
        </navigator>
        <view class="weui-loadmore_line" wx:if="{{myCollect.length == 0 && !loadingMore}}">
          <view class="weui-loadmore__tips weui-loadmore__tips_in-line">您还没有收藏任何课程哦！</view>
        </view>
      </view>
    </scroll-view>
    <loading-component loading-more="{{loadingMore}}"></loading-component>
</view>
