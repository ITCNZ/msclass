/* pages/home/home.wxss */
 .search-wrap{
   border-bottom: 1px solid #E4E4E4;
   margin: 0 -30rpx 20rpx -30rpx;
   padding: 20rpx
 }
 .search-btn{
   background: #F0F0F0;
   height: 72rpx;
   border-radius: 12rpx;
   padding: 0 30rpx;
   color: #666;
 }

 .first-tit{
  font-size: 36rpx;
  color: #333333;
  margin-top: 40rpx;
  margin-bottom: 14rpx;
}

 .course-list{
   margin: 0 -10rpx;
   width: auto;
   overflow: hidden;
   clear: both;
} 

.course-one{
  position: relative;
  text-align: center;
  width: 50%;
  float: left;
  font-size: 24rpx;
}
.weui-inner{
  margin: 0 10rpx; 
  height: 190rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative
}

.course-one .title{
  position: absolute;
  text-align: center;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  line-height: 190rpx;
  font-size: 32rpx;
}
.weui-inner .course-info{
  position: absolute;
  right: 10rpx;
  top: 0;
  height: 32rpx;
  line-height: 32rpx;
  color: #fff;
  overflow: hidden;
  background: rgba(0,0,0,.6);
  border-radius: 0 14rpx 0 14rpx;
  padding:0 12rpx 0 4rpx;
  font-size: 20rpx;
}
.course-one .time, .course-one .name{
  float: left;
  padding-left: 14rpx;
}

.course-one .title-info{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding:14rpx 10rpx 0 10rpx;
  font-weight: bold;
  text-align: left;
  font-size: 24rpx;
  line-height: 34rpx;
}
.course-one .title-teacher{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
  font-size: 20rpx;
  color: #999;
  padding: 0 10rpx;
}
.must-list-one{
  padding: 0;
  display: flex;
}
.must-course-img{
  width: 50%;
  margin: 0;
  position: relative
}
.must-title-info{
  width: 50%;
  padding-left: 32rpx;
  height: 190rpx;
  overflow: hidden
}
.must-course-img .course-info{
  right: 0;
}
.must-title-info text{
  display: block;
  width: 100%;
  font-size: 22rpx;
  line-height: 31rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.must-title-info .tit1{
  font-size: 30rpx;
  line-height: 50rpx;
  margin:10rpx 0 17rpx 0;
  font-weight:bold;
}
.must-title-info .tit2{
  font-size: 24rpx;
  line-height: 34rpx;
  margin-bottom: 22rpx;
}
.must-title-info .tit3{
  color: #999
}
.weui-inner .mask{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  border-radius: 12rpx;
}
.weui-inner .arr{
  position: absolute;
  left: -60rpx;
  top: -60rpx;
  width: 120rpx;
  height: 120rpx;
  font-size: 24rpx;
  color: #fff;
  background: #50C866;
  text-align: center;
  -ms-transform:rotate(-45deg); /* IE 9 */
  -moz-transform:rotate(-45deg); /* Firefox */
  -webkit-transform:rotate(7deg); /* Safari and Chrome */
  -o-transform:rotate(-45deg); /* Opera */
  transform: rotate(-45deg);
  line-height: 200rpx;
}