/* pages/usercenter/historyCourse/historyCourse.wxss */

.weui-inner{
  margin: 0 10rpx; 
  height: 190rpx;
  border-radius: 16rpx;
  overflow: hidden
}

.weui-inner .course-info{
  position: absolute;
  right: 10rpx;
  top: 0;
  height: 32rpx;
  line-height: 32rpx;
  color: #fff;
  overflow: hidden;
  background: rgba(0,0,0,.6);
  border-radius: 0 14rpx 0 14rpx;
  padding:0 12rpx 0 4rpx;
  font-size: 20rpx;
}

.must-list-one{
  padding: 0;
  display: flex;
}
.must-course-img{
  width: 50%;
  margin: 0;
  position: relative
}
.must-title-info{
  width: 50%;
  padding-left: 32rpx;
  height: 190rpx;
}
.must-course-img .course-info{
  right: 0;
}
.must-title-info text{
  display: block;
  width: 100%;
  font-size: 26rpx;
  line-height: 38rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #999;
  margin-bottom: 21rpx;
}
.must-title-info .tit1{
  font-size: 32rpx;
  line-height: 48rpx;
  margin:10rpx 0 17rpx 0;
  font-weight:bold;
  color: #333;
}
.data-time{
  color: #999;
  font-size: 36rpx;
  line-height: 50px;
}