<!--pages/usercenter/mustCourse/courseList/courseList.wxml-->
<view class="container">
  <scroll-view scroll-y enable-back-to-top lower-threshold="1" class="must-study-course">
    <navigator class="must-list-one mb40" url="/pages/usercenter/mustCourse/courseDetail/courseDetail?id={{item.planId}}&plantit={{item.planName}}" wx:for="{{mustCourse}}" wx:key="unique">
      <view class="weui-inner must-course-img">
        <image style="width: 100%; height: 100%; background: #eeeeee url('http://zl-teacher.oss-cn-hangzhou.aliyuncs.com/box_png/coursePlayModule.jpg');background-size:100% 100%" src="{{item.planCover}}" lazy-load="true"></image>
        <view class="course-info">
          <text class="time">{{item.planCover}}</text>
        </view>
      </view>
      <view class="must-title-info">
        <text class="tit1">{{item.planName}}</text>
        <text>课程数量：{{item.coursecount}}</text>
        <text>学习周数：{{item.planWeek}}</text>
        <text>学习人数：{{item.learncount}}</text>
      </view>
    </navigator>
  </scroll-view>
  <loading-component loading-more="{{loadingMore}}"></loading-component>
</view>